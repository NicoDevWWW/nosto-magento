<!-- Nosto settings form handler -->
<script type="text/javascript">
    var selector = "";
    function nostoHandleCronSettings() {
        var fv,h,f;
        var h = document.getElementsByName('groups[scheduled_currency_exchange_rate_update][fields][time][value][]')[0];
        var f = document.getElementById("nosto_tagging_scheduled_currency_exchange_rate_update_frequency");
        if (f) {
            var fv = f.value;
            if (fv == 'H') {
                var option = document.createElement("option");
                option.value = '*';
                option.text = '*';
                option.selected = 'selected';
                h.appendChild(option);
                h.setAttribute("disabled", "disabled");
            } else {
                for (var i = 0; i < h.length; i++) {
                    if (h.options[i].value == '*') {
                        h.remove(i);
                    }
                }
                h.removeAttribute("disabled");
            }
        }

        return false;
    }
    (function(){
        var f = document.getElementById("nosto_tagging_scheduled_currency_exchange_rate_update_frequency");
        if (f) {
            f.setAttribute('onchange', 'nostoHandleCronSettings()');
            nostoHandleCronSettings();
        }
    })();
</script>