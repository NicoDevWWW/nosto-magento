<?php
/**
 * @var $this           Nosto_Tagging_Block_Product
 * @var $helper         Nosto_Tagging_Helper_Data
 * @var $priceFormatter NostoFormatterPrice
 * @var $dateFormatter  NostoFormatterDate
 */
$product = $this->getMetaProduct();
$store = Mage::app()->getStore();
$helper = Mage::helper('nosto_tagging');
$priceFormatter = Nosto::formatter('price');
$dateFormatter = Nosto::formatter('date');
$priceFormat = new NostoPriceFormat(2, '.', '');
$dateFormat = new NostoDateFormat(NostoDateFormat::YMD);
$priceHelper = Mage::helper('nosto_tagging/price');
$dateHelper = Mage::helper('nosto_tagging/date');
?>

<!-- Nosto Product Tagging -->
<div class="nosto_product" style="display:none">
    <span class="url"><?php echo $product->getUrl(); ?></span>
    <span class="product_id"><?php echo $helper->escapeHtml($product->getProductId()); ?></span>
    <span class="name"><?php echo $helper->escapeHtml($product->getName()); ?></span>
    <span class="image_url"><?php echo $product->getImageUrl(); ?></span>
    <?php if ($product->getPrice()): ?>
        <span class="price"><?php echo $priceHelper->getFormattedPrice($product->getPrice()); ?></span>
    <?php endif; ?>
    <?php if ($product->getCurrency()): ?>
        <span class="price_currency_code"><?php echo $helper->escapeHtml($product->getCurrency()); ?></span>
    <?php endif; ?>
    <?php if ($product->getAvailability()): ?>
        <span class="availability"><?php echo $helper->escapeHtml($product->getAvailability()); ?></span>
    <?php endif; ?>
    <?php foreach ($product->getCategories() as $categoryString): ?>
        <span class="category"><?php echo $helper->escapeHtml($categoryString); ?></span>
    <?php endforeach; ?>
    <?php if ($product->getDescription()): ?>
        <span class="description"><?php echo $helper->escapeHtml($product->getDescription()); ?></span>
    <?php endif; ?>
    <?php if ($product->getListPrice()): ?>
        <span class="list_price"><?php echo $priceHelper->getFormattedPrice($product->getPrice()); ?></span>
    <?php endif; ?>
    <?php if ($product->getBrand()): ?>
        <span class="brand"><?php echo $helper->escapeHtml($product->getBrand()); ?></span>
    <?php endif; ?>
    <?php foreach ($product->getTags() as $type => $tags): ?>
        <?php foreach ($tags as $tag): ?>
            <span class="<?php echo $helper->escapeQuotes($type); ?>"><?php echo $helper->escapeHtml($tag); ?></span>
        <?php endforeach; ?>
    <?php endforeach; ?>
    <?php if ($product->getDatePublished()): ?>
        <span class="date_published"><?php echo $dateHelper->getFormattedDate($product->getDatePublished()); ?></span>
    <?php endif; ?>
    <?php if (!$helper->multiCurrencyDisabled()): ?>
        <span class="variation_id"><?php echo $helper->escapeHtml($product->getPriceVariationId()); ?></span>
        <?php if ($helper->isMultiCurrencyMethodPriceVariation($store)): ?>
            <?php foreach ($product->getPriceVariations() as $variation): ?>
                <?php
                if ($variation->getAvailability() instanceof NostoProductAvailability) {
                    $availability = $variation->getAvailability()->getAvailability();
                } else {
                    $availability = '';
                }

                if ($variation->getPrice() instanceof NostoPrice) {
                    $price = $priceFormatter->format($variation->getPrice(), $priceFormat);
                } else {
                    $price = '';
                }
                if ($variation->getListPrice() instanceof NostoPrice) {
                    $listPrice = $priceFormatter->format($variation->getListPrice(), $priceFormat);
                } else {
                    $listPrice = '';
                }
                ?>
                <div class="variation">
                    <span class="variation_id"><?php echo $helper->escapeHtml($variation->getVariationId()); ?></span>
                    <span class="price_currency_code"><?php echo $helper->escapeHtml($variation->getCurrencyCode()); ?></span>
                    <span class="price"><?php echo $variation->getFormattedPrice($priceFormat); ?></span>
                    <span class="list_price"><?php echo $variation->getFormattedListPrice($priceFormat); ?></span>
                    <span class="availability"><?php echo $helper->escapeHtml($variation->getAvailabilityString()); ?></span>
                </div>
            <?php endforeach; ?>
        <?php endif; ?>
    <?php endif; ?>

</div>
<?php if ($this->getCurrentCategory()): ?>
    <div class="nosto_category" style="display:none"><?php echo $helper->escapeHtml($this->getCurrentCategory()); ?></div>
<?php endif; ?>